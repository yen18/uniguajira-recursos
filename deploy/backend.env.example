# Backend environment for production (Docker)

# Database (matches docker-compose)
DB_HOST=db
DB_PORT=3306
DB_USER=appuser
DB_PASSWORD=appsecret
DB_NAME=gestion_de_recursos

# Server
PORT=3001
NODE_ENV=production
# Set to 0 on first boot to allow ALTERs; later you may set 1 to skip
SKIP_SCHEMA=0

# Auth
JWT_SECRET=change_me_generate_a_strong_secret
ACCESS_TOKEN_TTL_MIN=15
REFRESH_TOKEN_TTL_DAYS=7
REFRESH_TOKEN_COOKIE_NAME=refresh_token
PASSWORD_RESET_TTL_MIN=30
FRONTEND_RESET_URL=https://frontend.example.com/reset-password
SENTRY_DSN=your_sentry_dsn_here
SENTRY_TRACES_SAMPLE_RATE=0.2
SENTRY_PROFILES_SAMPLE_RATE=0.1

# CORS: backend already allows capacitor://localhost and LAN; in production behind Caddy
# add explicit origins if you will serve a web app on a domain:
# ALLOWED_ORIGINS=https://tu-dominio.edu.co,https://www.tu-dominio.edu.co
